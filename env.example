# ========================================
# SABORES LUSITANOS - VARIÁVEIS DE AMBIENTE
# ========================================

# ========================================
# CONFIGURAÇÕES DO SERVIDOR
# ========================================
NODE_ENV=production
PORT=10000

# ========================================
# BANCO DE DADOS
# ========================================
# SQLite (banco local - criado automaticamente)
# Não é necessário configurar - o banco é criado automaticamente

# ========================================
# AUTENTICAÇÃO JWT
# ========================================
JWT_SECRET=sua_chave_secreta_muito_segura_aqui_minimo_32_caracteres
JWT_EXPIRE=30d

# ========================================
# EMAIL (para reset de senha)
# ========================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=seu_email@gmail.com
EMAIL_PASS=sua_senha_de_app_do_gmail

# ========================================
# CLOUDINARY (para upload de imagens na nuvem)
# ========================================
CLOUDINARY_CLOUD_NAME=seu_cloud_name
CLOUDINARY_API_KEY=sua_api_key
CLOUDINARY_API_SECRET=sua_api_secret

# ========================================
# FRONTEND (URL do seu frontend)
# ========================================
FRONTEND_URL=https://seu-frontend-domain.com

# ========================================
# RATE LIMITING
# ========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ========================================
# UPLOAD
# ========================================
MAX_FILE_SIZE=5242880
MAX_FILES=10
